<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@android:color/holo_red_dark"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_share_tips"
        android:layout_width="149dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/theseus_ugc_share_bubble_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_share_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:text="分享给朋友吧~"
            android:textSize="12sp"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_left_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/theseus_ugc_bubble_icon"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="@id/ll_share_tips"
        app:layout_constraintStart_toStartOf="@id/ll_share_tips" />
</androidx.constraintlayout.widget.ConstraintLayout>