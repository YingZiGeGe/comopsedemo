<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="Hello World!"
        android:textSize="18sp"
        android:background="@color/black"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/ll_king_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@android:color/holo_blue_bright"
            android:textColor="@color/white"
            android:text="点赞" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@android:color/holo_blue_bright"
            android:textColor="@color/white"
            android:text="投币" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@android:color/holo_blue_bright"
            android:textColor="@color/white"
            android:text="收藏" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@android:color/holo_blue_bright"
            android:textColor="@color/white"
            android:text="分享" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_share_tips"
        android:layout_width="149dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/theseus_ugc_share_bubble_bg"
        app:layout_constraintTop_toBottomOf="@id/ll_king_position"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_share_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:text="分享给朋友吧~"
            android:textSize="12sp"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_left_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/theseus_ugc_bubble_icon"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="@id/ll_share_tips"
        app:layout_constraintStart_toStartOf="@id/ll_share_tips" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bubble_v2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_share_tips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.example.compose.widget.BubbleBackgroundConstraintLayout
            android:id="@+id/bubble_content"
            android:layout_width="153dp"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            app:corner_radius="30dp"
            app:render_color="#FFF6F7F8"
            app:render_mode="fill"
            app:triangle_horizon_center_position="120dp"
            app:triangle_vertical_location="down"
            app:triangle_width="14dp"
            app:triangle_height="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享给朋友吧~"
                android:textSize="12sp"
                android:layout_marginStart="54dp"
                android:layout_marginBottom="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </com.example.compose.widget.BubbleBackgroundConstraintLayout>

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:src="@drawable/theseus_ugc_bubble_icon"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toBottomOf="@id/bubble_content"
            app:layout_constraintStart_toStartOf="@id/bubble_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bubble_v3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bubble_v2"
        app:layout_constraintStart_toStartOf="@id/bubble_v2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bubble_v3_content"
            android:layout_width="210dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/theseus_ugc_share_bubble_bg_5x"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_share_text_v3"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="分享给朋友吧~"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="14dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/iv_icon_v3"
            android:layout_width="46dp"
            android:layout_height="42dp"
            android:src="@drawable/theseus_ugc_bubble_icon"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="@id/bubble_v3_content"
            app:layout_constraintStart_toStartOf="@id/bubble_v3_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>