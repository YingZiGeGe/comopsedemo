<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginRight="6dp"
    android:layout_width="36dp"
    android:layout_height="36dp">

    <ImageView
        android:id="@+id/biz_enter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_play_together" />

    <TextView
        android:id="@+id/notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:lines="1"
        android:ellipsize="end"
        android:background="@drawable/live_interaction_panel_notify3_bg"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:gravity="center"
        android:visibility="gone"
        tools:text="可领取可领取可领取"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/notify_img"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="end"
        tools:src="@mipmap/ic_launcher"
        tools:visibility="gone" />

    <!-- 红点 -->
    <ImageView
        android:id="@+id/red_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_gravity="top|end"
        android:contentDescription="@null"
        android:src="@drawable/live_interaction_panel_num_bg"
        android:visibility="gone"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="1dp"
        tools:visibility="gone" />

    <!-- 数字角标 -->
    <TextView
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_gravity="top|end"
        android:background="@drawable/live_interaction_panel_num_bg"
        android:gravity="center"
        android:textSize="8sp"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:text="1"
        tools:ignore="SmallSp"
        tools:visibility="visible" />
</FrameLayout>